<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="10dp"
    android:elevation="10dp"

    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:background="?android:attr/selectableItemBackground"
    android:paddingTop="@dimen/padding_10_dp"
    android:paddingBottom="@dimen/padding_10_dp"
    android:layout_centerVertical="true">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/listProfileItem"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="3dp"
            android:src="@drawable/unkown_person_24" />

        <TextView
            android:id="@+id/usernameListItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_toStartOf="@id/listProfileItem"
            android:text="asffas"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/titleList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="3dp"
            android:layout_toStartOf="@id/usernameListItem"
            android:text="safafsafs"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/descList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/titleList"
            android:layout_alignParentStart="true"
            android:layout_marginStart="3dp"
            android:layout_marginTop="1dp"
            android:layout_toStartOf="@id/listProfileItem"
            android:text=""
            android:textColor="@color/white"
            android:textSize="15sp" />



    </RelativeLayout>




</RelativeLayout>

</com.google.android.material.card.MaterialCardView>