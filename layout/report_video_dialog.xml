<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="#2E2A2A"
    android:padding="3dp">


    <RadioGroup
        android:id="@+id/reportVideoGroup"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        android:layout_below="@id/bar"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp">

        <!-- In RadioGroup create the 1 Radio Button-->
        <!-- like this we will add some more Radio Button-->
        <RadioButton
            android:id="@+id/radia_id1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Sexual Content and Profanity"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/radia_id2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Hate Speech"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/radia_id3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Violence"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/radia_id4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Terrorist Content"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/radia_id5"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Dangerous Movements and Organizations"

            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/radia_id6"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Bullying and Harassment"

            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/radia_id7"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Sensitive Events"

            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/radia_id8"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Dangerous Products"
            android:textSize="16sp" />


        <RadioButton
            android:id="@+id/radia_id9"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Marijuana"
            android:textSize="16sp" />


        <RadioButton
            android:id="@+id/radia_id10"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Tobacco and Alcohol"
            android:textSize="16sp" />

    </RadioGroup>
    <Button
        android:layout_margin="10dp"
        android:backgroundTint="#FFC107"
        android:textColor="@color/black"
        android:background="@drawable/button_backgroud"
        android:id="@+id/sendReport"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="Report" />


</LinearLayout>
